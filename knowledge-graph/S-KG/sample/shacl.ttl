@prefix :       <http://info290/> .
@prefix foaf:   <http://xmlns.com/foaf/0.1/> .
@prefix schema: <http://schema.org/> .
@prefix xsd:    <http://www.w3.org/2001/XMLSchema#> .
@prefix rdf:    <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix ex:     <http://example.org/> .
@prefix sh:     <http://www.w3.org/ns/shacl#> .

ex:CourseShape
    a sh:NodeShape ;
    sh:targetClass schema:Course ;

    # Constraint on schema:name
    sh:property [
        sh:path schema:name ;
        sh:datatype xsd:string ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
    ] ;

    # Constraint on schema:courseCode
    sh:property [
        sh:path schema:courseCode ;
        sh:datatype xsd:string ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
    ] ;

    # Constraint on schema:numberOfCredits
    sh:property [
        sh:path schema:numberOfCredits ;
        sh:datatype xsd:integer ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
    ] ; 

    # Constraint on ex:hasTopics
    sh:property [
        sh:path ex:hasTopics ;
        sh:node :Topic ;
    ] ;

    # Constraint on ex:offeredBy
    sh:property [
        sh:path ex:offeredBy ;
        sh:node ex:Department ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
    ] ;

    # Constraint on ex:hasPrerequisite
    sh:property [
        sh:path ex:hasPrerequisite ;
        sh:node schema:Course ;
    ] ;

    # Constraint on ex:offeringTerm
    sh:property [
        sh:path ex:offeringTerm ;
        sh:in ("Fall" "Spring" "Both") ;
    ] ;

    # Constraint on schema:instructure
    sh:property [
        sh:path schema:instructure;
        sh:datatype xsd:string ;
        sh:minCount 1 ;
    ] ;

    # Constraint on schema:dayOfWeek
    sh:property [
        sh:path schema:dayOfWeek ;
        sh:in ("Monday" "Tuesday" "Wednesday" "Thursday" "Friday" "Saturday" "Sunday") ;
    ] ;

    # Constraint on schema:startTime
    sh:property [
        sh:path schema:startTime ;
        sh:datatype xsd:time ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
    ] ; 

    # Constraint on schema:endTime
    sh:property [
        sh:path schema:endTime ;
        sh:datatype xsd:time ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
    ] ; 

    # Constraint on schema:endTime
    sh:property [
        sh:path schema:location ;
        sh:datatype xsd:string ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
    ] .


ex:ProgramShape
    a sh:NodeShape ;
    sh:targetClass ex:Program ;
    
    # Constraint on schema:name
    sh:property [
        sh:path schema:name ;
        sh:datatype xsd:string ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
    ] ;  

    # Constraint on ex:duration
    sh:property [
        sh:path ex:duration ;
        sh:datatype xsd:string ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
    ] ; 

    # Constraint on schema:numberOfCredits
    sh:property [
        sh:path schema:numberOfCredits ;
        sh:datatype xsd:integer ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
    ] ; 

    # Constraint on ex:offeredBy
    sh:property [
        sh:path ex:offeredBy ;
        sh:node ex:Department ;
    ] .


ex:DepartmentShape
    a sh:NodeShape ;
    sh:targetClass ex:Department ;

    # Constraint on schema:name
    sh:property [
        sh:path schema:name ;
        sh:datatype xsd:string ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
    ] .


ex:StudentShape
    a sh:NodeShape ;
    sh:targetClass ex:Student ;

    # Constraint on schema:name
    sh:property [
        sh:path schema:name ;
        sh:datatype xsd:string ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
    ] ;

    # Constraint on ex:hasMajor
    sh:property [
        sh:path ex:hasMajor ;
        sh:node ex:Program ;
    ] ;

    # Constraint on ex:hasTaken
    sh:property [
        sh:path ex:hasTaken ;
        sh:node ex:Course ;
    ] ;

    # Constraint on ex:hasInterest
    sh:property [
        sh:path ex:hasInterest ;
        sh:node :Topic ;
    ] .    
